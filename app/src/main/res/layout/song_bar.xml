<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/song_bar"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/rounded_image_shape"
    android:backgroundTint="?android:attr/colorBackground"
    android:backgroundTintMode="src_in"
    >

    <!-- Song Album Image -->
    <ImageView
        android:id="@+id/bar_album_art"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginVertical="4dp"
        android:src="@drawable/stocksongcover"
        android:background="@drawable/rounded_image_shape"
        android:clipToOutline="true"
        android:contentDescription="@null"/>

    <!-- Track Info -->
    <LinearLayout
        android:id="@+id/track_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/bar_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:maxLines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:id="@+id/bar_track_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?attr/colorOnSurface"/>
    </LinearLayout>

    <!-- Play/Pause Button -->
    <ImageButton
        android:id="@+id/bar_play_pause_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_round_play_arrow"
        android:contentDescription="@null"
        app:tint="?attr/colorOnSurface" />
</LinearLayout>
